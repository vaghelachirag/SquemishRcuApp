                                        android:layout_marginLeft="1dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginRight="1dp"
                                        android:layout_weight="6"
                                       android:background="@color/white"
                                        android:gravity="center"
                                        android:textSize="@dimen/_12sdp"
