<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="position"
            type="Integer" />

        <variable
            name="itemData"
            type="com.squmish.rcuapp.model.dashboard.getDashboardApiResponse.GetMobileDashboardDetailDto" />

        <variable
            name="holder"
            type="com.squmish.rcuapp.view.adapter.DashboardMenuViewHolder" />

        <variable
            name="viewmodel"
            type="com.squmish.rcuapp.viewmodel.DashboardMenuViewModel" />
    </data>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="@dimen/_20sdp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCounter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:background="@drawable/bg_border_fill_rounded"
                android:gravity="center">

                <com.squmish.rcuapp.widget.HeaderText
                    android:id="@+id/txtCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp">

                </com.squmish.rcuapp.widget.HeaderText>
            </LinearLayout>

        </FrameLayout>

        <com.squmish.rcuapp.widget.HeaderText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@={itemData.buttonCaption}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp" />

        <com.squmish.rcuapp.widget.HeaderText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:visibility="gone"
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>